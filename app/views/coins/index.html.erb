<p style="color: green"><%= notice %></p>

<h1>Coins</h1>
<h2><%= cookies[:course] %></h2>

<table>
  <thead>
    <tr>
      <th> <%= @coins.human_attribute_name(:description)%> </th>
      <th> <%= @coins.human_attribute_name(:acronym)%> </th>
      <th> <%= @coins.human_attribute_name(:url_image)%> </th>
      <th colspan"3"></th>
    </tr>
  </thead>

  <tbody>
  <% @coins.each do |coin| %>
    <tr>
      <td> <%= coin.description %> </td>
      <td> <%= coin.acronym %> </td>
      <td> <%= image_tag coin.url_image, size: "30x30" %> </td>
      <td> <%= link_to t('links.show'), coin %> </td>
      <td> <%= link_to t('links.edit'), edit_coin_path(coin) %> </td>
      <td> <%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Are you sure? '} %> </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New coin", new_coin_path %>

<%= link_to "Home page", welcome_index_path %>